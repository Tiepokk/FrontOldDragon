<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissões para notificações e serviço em foreground -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OldDragon"
        tools:targetApi="31">

        <!-- MainActivity - Tela Principal -->
        <activity
            android:name=".view.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OldDragon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- AttributeGeneratorActivity -->
        <activity
            android:name=".view.activities.AttributeGeneratorActivity"
            android:exported="false"
            android:label="Gerador de Atributos"
            android:theme="@style/Theme.OldDragon" />

        <!-- AttributeSelectionActivity -->
        <activity
            android:name=".view.activities.AttributeSelectionActivity"
            android:exported="false"
            android:label="Seleção de Atributos"
            android:theme="@style/Theme.OldDragon" />

        <!-- RaceSelectionActivity -->
        <activity
            android:name=".view.activities.RaceSelectionActivity"
            android:exported="false"
            android:label="Seleção de Raça"
            android:theme="@style/Theme.OldDragon" />

        <!-- ClassSelectionActivity -->
        <activity
            android:name=".view.activities.ClassSelectionActivity"
            android:exported="false"
            android:label="Seleção de Classe"
            android:theme="@style/Theme.OldDragon" />

        <!-- CharacterCreationActivity -->
        <activity
            android:name=".view.activities.CharacterCreationActivity"
            android:exported="false"
            android:label="Criação de Personagem"
            android:theme="@style/Theme.OldDragon" />

        <!-- PersonagemListActivity -->
        <activity
            android:name=".view.activities.PersonagemListActivity"
            android:exported="false"
            android:label="Meus Personagens"
            android:theme="@style/Theme.OldDragon" />

        <!-- PersonagemDetailActivity -->
        <activity
            android:name=".view.activities.PersonagemDetailActivity"
            android:exported="false"
            android:label="Detalhes do Personagem"
            android:theme="@style/Theme.OldDragon" />

        <!-- BattleActivity - NOVA -->
        <activity
            android:name=".view.activities.BattleActivity"
            android:exported="false"
            android:label="Simulador de Batalha"
            android:theme="@style/Theme.OldDragon" />

        <!-- BattleService - NOVO -->
        <service
            android:name=".service.BattleService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="RPG Battle Simulator" />
        </service>

    </application>

</manifest>