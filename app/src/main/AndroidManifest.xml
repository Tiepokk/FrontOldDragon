<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OldDragon"
        tools:targetApi="31">

        <!-- Activity Principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OldDragon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity Gerador de Atributos -->
        <activity
            android:name=".AttributeGeneratorActivity"
            android:exported="false"
            android:label="Gerador de Atributos"
            android:parentActivityName=".MainActivity" />

        <!-- Activity Seleção de Atributos -->
        <activity
            android:name=".AttributeSelectionActivity"
            android:exported="false"
            android:label="Distribuir Atributos"
            android:parentActivityName=".AttributeGeneratorActivity" />

        <!-- Activity Rolador de Dados -->
        <activity
            android:name=".DiceRollerActivity"
            android:exported="false"
            android:label="Rolador de Dados"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>